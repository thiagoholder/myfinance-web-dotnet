@using MyFinance.Application.Dto;
@model EditPlanoContaViewModel

<div class="container mt-5">
    <h2 class="mb-4">Editar Plano COnta</h2>

    <form asp-controller="PlanoConta" asp-action="Edit" method="post" class="p-5">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Descricao" class="form-label"></label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Tipo" class="form-label"></label>
            <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<TipoPlanoConta>()" class="form-select"></select>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
